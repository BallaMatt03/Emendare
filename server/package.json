{
  "name": "emendare-server",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node build/index.js",
    "dev": "nodemon build/index.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "format": "prettier --write ./**/*.{js,ts,json,md}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "bcrypt": "^3.0.2",
    "crypto": "^1.0.1",
    "diff-match-patch": "^1.0.4",
    "express": "^4.16.3",
    "is-match": "^1.0.0",
    "mongoose": "^5.3.4",
    "node-fetch": "^2.3.0",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/diff-match-patch": "^1.0.32",
    "@types/express": "^4.16.0",
    "@types/mongoose": "^5.3.7",
    "@types/node": "^10.12.18",
    "@types/node-fetch": "^2.1.4",
    "@types/socket.io": "^2.1.2",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-sonarjs": "^0.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  }
}
