{
  "name": "emendare-server",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "lint": "./node_modules/.bin/eslint src/**/*.js --fix",
    "format": "prettier \"src/**/*.js\" --write",
    "precommit": "NODE_ENV=production lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "bcrypt": "^3.0.2",
    "crypto": "^1.0.1",
    "diff-match-patch": "^1.0.4",
    "express": "^4.16.3",
    "is-match": "^1.0.0",
    "mongoose": "^5.3.4",
    "node-fetch": "^2.3.0",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-sonarjs": "^0.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  }
}
